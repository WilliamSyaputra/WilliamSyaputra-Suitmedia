<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SecondScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:backgroundTint="@color/white"
            android:id="@+id/btn_img_backSecond"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Sreen"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginHorizontal="90dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="20dp"
        android:id="@+id/tv_name"
        android:textSize="21dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:text="Selected User Name"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:id="@+id/tv_userName"
        android:textSize="25dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Choose a User"
        android:id="@+id/btn_chsUser"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2B637B"
        android:layout_marginHorizontal="30dp"/>


</LinearLayout>